<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/button_settingsLayout"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:icon="@drawable/ic_baseline_arrow_back_24"
            app:iconTint="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switchTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/switcher_settingsLayout"
            app:layout_constraintTop_toBottomOf="@+id/buttonSettings"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/switchTheme">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/shareTextView" />

            <ImageView
                android:id="@+id/shareVector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="20dp"
                android:src="@drawable/ic_share"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_support"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/rl_share">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/support" />

            <ImageView
                android:id="@+id/iv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="20dp"
                android:src="@drawable/ic_support"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_termsOfUse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/rl_support">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/termsOfUse" />

            <ImageView
                android:id="@+id/iv_termsOfUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="20dp"
                android:src="@drawable/ic_termsofuse"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>